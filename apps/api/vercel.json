{
  "version": 2,
  "buildCommand": "cd ../.. && npx prisma generate --schema=apps/api/prisma/schema.prisma",
  "installCommand": "cd ../.. && npm install",
  "builds": [
    {
      "src": "api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["prisma/**", "src/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.ts"
    }
  ]
}
