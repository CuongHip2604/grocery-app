// Grocery Store Management App - Prisma Schema (MongoDB)
// Documentation: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// ============================================
// User & Authentication
// ============================================

model User {
  id                String             @id @default(auto()) @map("_id") @db.ObjectId
  email             String             @unique
  passwordHash      String             @map("password_hash")
  pushSubscriptions PushSubscription[]
  notifications     Notification[]
  createdAt         DateTime           @default(now()) @map("created_at")
  updatedAt         DateTime           @updatedAt @map("updated_at")

  @@map("users")
}

model PushSubscription {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  token     String   @unique
  userId    String?  @map("user_id") @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("push_subscriptions")
}

model Notification {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String   // LOW_STOCK, SALE, PAYMENT, SYSTEM
  title     String
  body      String
  data      Json?    // Additional data (productId, saleId, etc.)
  isRead    Boolean  @default(false) @map("is_read")
  userId    String?  @map("user_id") @db.ObjectId
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("notifications")
}

// ============================================
// Product Management
// ============================================

model Category {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  name        String    @unique
  description String?
  products    Product[]
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  @@map("categories")
}

model Product {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  barcode       String       @unique
  name          String
  description   String?
  price         Float
  cost          Float
  categoryId    String?      @map("category_id") @db.ObjectId
  category      Category?    @relation(fields: [categoryId], references: [id])
  reorderLevel  Int          @default(5) @map("reorder_level")
  isCustomLabel Boolean      @default(false) @map("is_custom_label")
  isWeightBased Boolean      @default(false) @map("is_weight_based")
  pricingUnit   PricingUnit  @default(PIECE) @map("pricing_unit")
  inventory     Inventory?
  saleItems     SaleItem[]
  createdAt     DateTime     @default(now()) @map("created_at")
  updatedAt     DateTime     @updatedAt @map("updated_at")

  @@map("products")
}

model Inventory {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  productId   String   @unique @map("product_id") @db.ObjectId
  product     Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity    Float    @default(0)
  lastUpdated DateTime @default(now()) @map("last_updated")

  @@map("inventory")
}

// ============================================
// Sales & Transactions
// ============================================

model Customer {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  name         String         @unique
  phone        String?
  email        String?
  address      String?
  notes        String?
  sales        Sale[]
  creditLedger CreditLedger[]
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  @@map("customers")
}

model Sale {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  customerId   String?        @map("customer_id") @db.ObjectId
  customer     Customer?      @relation(fields: [customerId], references: [id])
  totalAmount  Float          @map("total_amount")
  paymentType  PaymentType    @default(CASH) @map("payment_type")
  status       SaleStatus     @default(COMPLETED)
  syncStatus   SyncStatus     @default(SYNCED) @map("sync_status")
  syncId       String?        @map("sync_id")
  items        SaleItem[]
  creditLedger CreditLedger[]
  createdAt    DateTime       @default(now()) @map("created_at")
  updatedAt    DateTime       @updatedAt @map("updated_at")

  @@map("sales")
}

model SaleItem {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  saleId    String  @map("sale_id") @db.ObjectId
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade)
  productId String  @map("product_id") @db.ObjectId
  product   Product @relation(fields: [productId], references: [id])
  quantity  Float
  unitPrice Float   @map("unit_price")
  subtotal  Float

  @@map("sale_items")
}

// ============================================
// Credit Management
// ============================================

model CreditLedger {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  customerId  String          @map("customer_id") @db.ObjectId
  customer    Customer        @relation(fields: [customerId], references: [id])
  saleId      String?         @map("sale_id") @db.ObjectId
  sale        Sale?           @relation(fields: [saleId], references: [id])
  type        CreditEntryType
  amount      Float
  balance     Float
  description String?
  createdAt   DateTime        @default(now()) @map("created_at")

  @@map("credit_ledger")
}

// ============================================
// Accounting
// ============================================

model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  category    String
  amount      Float
  description String?
  date        DateTime
  createdAt   DateTime @default(now()) @map("created_at")

  @@map("expenses")
}

model SupplierPayment {
  id           String        @id @default(auto()) @map("_id") @db.ObjectId
  supplierName String        @map("supplier_name")
  amount       Float
  description  String?
  dueDate      DateTime?     @map("due_date")
  paidDate     DateTime?     @map("paid_date")
  status       PaymentStatus @default(PENDING)
  createdAt    DateTime      @default(now()) @map("created_at")

  @@map("supplier_payments")
}

// ============================================
// Enums
// ============================================

enum PaymentType {
  CASH
  CREDIT
}

enum SaleStatus {
  COMPLETED
  VOIDED
}

enum SyncStatus {
  PENDING
  SYNCED
  FAILED
}

enum CreditEntryType {
  CHARGE
  PAYMENT
}

enum PaymentStatus {
  PENDING
  PAID
  OVERDUE
}

enum PricingUnit {
  PIECE    // Default for regular products
  KG       // Price per kilogram
  G        // Price per gram
  PER_100G // Price per 100 grams
}
